#! /bin/sh

tmpsite=@abs_top_builddir@/tests/install@PYTHON_SITE_PKG@

modpath=${tmpsite}/pyccn
pypath=${tmpsite}:$PYTHONPATH

test -z "$1" &&
	PYTHONPATH=$pypath DYLD_LIBRARY_PATH=$modpath exec @PYTHON@

test "$1" == "gdb" &&
	PYTHONPATH=$pypath DYLD_LIBRARY_PATH=$modpath exec gdb

PYTHONPATH=$pypath DYLD_LIBRARY_PATH=$modpath exec @PYTHON@ "$@"
